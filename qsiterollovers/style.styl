@font-face {
  font-family: 'proxima-nova';
  src: url('hondenstinkfont.woff2') format('woff2');
}

body
    margin:0
    font-family 'proxima-nova'
    margin-bottom 100px
.case
    width 100%
    height 500px
    display flex
    justify-content center
    align-items center
    margin-bottom 150px
h1
    margin 20px
    font-family 'proxima-nova'

// easings
swift-smooth-end = cubic-bezier(0.3, 0, 0, 0.99);
swift-in-out = cubic-bezier(0.56, 0.07, 0.04, 0.99)

.minimal-setup
    .parent
        background-color #818181
        width 200px
        height 160px
        display flex
        padding 10px
        justify-content center
        align-items center
        transition all swift-smooth-end 0.5s

        &:hover
            transform scale(1.4)
            .child
                transform translate3d(20px, -50px, 10px)
        
        &:not(:hover)
            transition all 0.5s swift-in-out
            .child
                transition all 0.5s swift-in-out

    .child
        background-color #cbcbcb
        width 100%
        height 100%
        transition all swift-in-out 0.9s

//rijksmuseum
.rijksmuseum
    perspective 500px
    .container
        background-color white
        width 450px
        height 300px
        position relative
        transition all swift-in-out 0.8s
        perspective 500px
        .woman
            background-image url('images/rijks-woman.png')
            background-size 100%
            width 250px
            height 282px
            transform-origin bottom
            transition all swift-smooth-end 1s
            transition-delay 0.2s
            position absolute
            bottom 0
            left 125px
        .logo
            background-image url('images/rijks-logo.png')
            background-size 100%
            width 397px
            height 47px
            position absolute
            top 39px
            left 27px
        .bottom
            background-image url('images/rijks-bottom.png')
            background-size 100%
            width 100%
            height 33px
            position absolute
            bottom 0px
        .streamer
            position absolute
            bottom 0px
            color white
            border-radius 6px
            h4
                transition all swift-in-out 1s
                transition-delay 0.3s
                transform translateY(20px)
                opacity 0
                padding 0 20px
            .bg
                background linear-gradient(0deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 50%)
                width 100%
                height:100px;
                border-radius 6px
                position absolute
                bottom 0px
                opacity 0
                transition opacity swift-in-out 2s
        .rijks
            background-color white
            width 450px
            height 300px
            display flex
            position absolute
            border-radius 6px
            box-shadow 0 12px 15px 0px #00000030
            transition all swift-smooth-end 0.5s
            overflow hidden
            .bg
                background-image url('images/rijks-bg.png')
                background-size 100%
                background-position bottom
                width 450px
                height 300px
                position absolute
                transform-origin bottom
                transition transform 3s ease
            .topbar
                background-image url('images/rijks-browser-bar.png')
                background-size 100%
                width 100%
                height 33px
                position absolute
                top -1px
        &:hover
            transform scale(1.5) rotateY(8deg)
            .logo
                transform translate3d(20px, 80px, 50px)
            .woman
                transform scale(1.4)
            .streamer
                .bg
                    opacity 1
                h4
                    transform translateY(0)
                    opacity 1
            .rijks
                box-shadow 0 30px 40px 0px #00000040
                .bg
                    transform scale(1.2)
                           
        &:not(:hover)
            .child
                transition all 0.5s swift-in-out
            .rijks
                transition all 0.5s swift-in-out
                .child
                    transition all 0.5s swift-in-out
            

    .child
        transition all swift-in-out 0.9s

