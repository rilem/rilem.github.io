//tuin der lusten
.tuin
    .container
        transition all 0.6s swift-in-out
        .browser
            width 460px
            height 258px
            border-radius 6px
            box-shadow 0 12px 15px 0px #00000030
            overflow hidden
            position relative
            transition all 0.7s swift-in-out
            .topbar
                width 100%
                height 15px
                background-image url('images/bosch-bar.png')
                background-size 100%
                position absolute
                top -1px
            .content
                width 100%
                height 258px
                top 15px
                background-size 100%
                position absolute
                transition all 0.5s swift-in-out
            .full
                background-image url('images/bosch-full.png')
            .blur
                background-image url('images/bosch-blur.png')
                opacity 0
                transition all 0.8s swift-in-out
            .zoom
                background-image url('images/bosch-zoom.png')
                opacity 0
                transition transform 8s ease, opacity 0.5s ease
                transition-delay 0.3s
        &:hover
            transform scale(1.6)
            .browser
                box-shadow 0 30px 40px 0px #00000040
            .full
                transform scale(4)
            .blur
                opacity 1
                transform scale(1.5)
            .zoom
                opacity 1
                transform scale(1.2) translateX(-10px)
        &:not(:hover)
            .zoom
                transition all 0.5s swift-in-out
                transition-delay 0
