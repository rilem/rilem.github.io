@import "/variables.styl"
#frame
 overflow hidden
 width 100%
 position absolute
 height 100%

.preloader
	display none



//card
.scene
	position relative
	perspective 1000px
	transform-style preserve-3d
	transition: all 500ms cubic-bezier(0.860, 0.000, 0.070, 1.000)
	&:hover
		transform scale(1.5) translateY(50px)

	.card
		transform rotateY(10deg)
		animation spin 10s ease infinite
		transform-style preserve-3d
		-webkit-box-shadow: 0 1px 19px rgba(0,0,0,0.33);
		-moz-box-shadow: 0 1px 19px rgba(0,0,0,0.33);
		box-shadow: 0 1px 19px rgba(0,0,0,0.33);
		width 344px
		height 480px
		border-radius 15px
		transition: all 500ms cubic-bezier(0.860, 0.000, 0.070, 1.000)
		&:hover
			box-shadow: 0 20px 50px rgba(0,0,0,0.33)
		.face
			width 344px
			height 480px
			background-size cover
			position absolute
			border-radius 15px
			backface-visibility hidden
			&.ft
				background-image url('../img/richard.png')
				transform rotateY(0deg)
				z-index 2
			&.bk
				background-image url('../img/cardback.png')
				transition: all 500ms cubic-bezier(0.860, 0.000, 0.070, 1.000)

.scene:hover .card .face.bk
	transform translateX(180px) translateZ(-100px) rotateZ(20deg) scale(0.7)
	opacity 0.6
	z-index -20

.container
	opacity 0

bubblesize = 60px

.selectBar
	width 100%
	height 50px
	position absolute
	bottom 30px
	p
		font-size 1.5em
		margin-left 10px
		animation fadeInRight 1s
		animationTiming easeOutQuint
	.bubble
		margin 10px
		float left
		width bubblesize
		height bubblesize
		border-radius 100px
		overflow hidden
		transition all 300ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
		animation fadeInUp 0.5s ease
		border 3px solid white
		box-shadow 0 1px 0 rgba(0,0,0,0.29)
    transform-origin 50% 100%

		&:hover
			transform scale(1.2)

		img
			width 100%
			height 100%


//layout
columnWidth = 344px


//animation timing
transitionTime = 0.7s

//timing functions
easeOutQuint = cubic-bezier(0.230, 1.000, 0.320, 1.000)
easeInOutQuint = cubic-bezier(0.860, 0.000, 0.070, 1.000)
easeOutOjo = cubic-bezier(0.000, 0.430, 0.300, 1)

//colors
primaryColor = #202225
textColor = #437a96

.flexbox
	display flex
  flex-direction row
  flex-wrap nowrap
  justify-content center
  align-content center
  align-items center

body
	font-family: 'Roboto Condensed', sans-serif
	color #888888
	margin 0
	background-color rgb(96, 96, 96)

.container
	width columnWidth
	margin-left auto
	margin-right auto
	transform translateY(50px)


.fadeInUp
	opacity 0
	animation fadeInUp 0.3
	animationTiming easeOutQuint
	animationFillMode forwards

for i in (1..30)
	.bubble:nth-child({i})
		animationDelay .04s * i

for i in (1..30)
	.bubble:nth-child({i})
		animationDelay .04s * i


.gradient
  background: -moz-radial-gradient(center, ellipse cover, #496e99 0%, #11677c 100%); /* FF3.6+ */
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#496e99), color-stop(100%,#11677c)); /* Chrome,Safari4+ */
  background: -webkit-radial-gradient(center, ellipse cover, #496e99 0%,#11677c 100%); /* Chrome10+,Safari5.1+ */
  background: -o-radial-gradient(center, ellipse cover, #496e99 0%,#11677c 100%); /* Opera 12+ */
  background: -ms-radial-gradient(center, ellipse cover, #496e99 0%,#11677c 100%); /* IE10+ */
  background: radial-gradient(ellipse at center, #496e99 0%,#11677c 100%); /* W3C */



@-webkit-keyframes spin
	0%
		transform rotateY(-10deg)
	50%
		transform rotateY(10deg)
	100%
		transform rotateY(-10deg)



@-webkit-keyframes fadeInUp
	from
		opacity 0
		transform translateX(100px)

@-webkit-keyframes fadeInRight
	from
		opacity 0
		transform translateX(-100px)
